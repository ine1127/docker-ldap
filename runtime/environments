# Configure Default Environment Variables

LDAP_DOMAIN=${LDAP_DOMAIN:-example.com}

LDAP_ORGNAME=${LDAP_ORGNAME:-${LDAP_DOMAIN}}
LDAP_ORGNAME_DESC=${LDAP_ORGNAME_DESC:-${LDAP_ORGNAME}}
LDAP_PEOPLE=${LDAP_PEOPLE:-People}
LDAP_PEOPLE_DESC=${LDAP_PEOPLE_DESC:-${LDAP_PEOPLE}}
LDAP_GROUP=${LDAP_GROUP:-Group}
LDAP_GROUP_DESC=${LDAP_GROUP_DESC:-${LDAP_GROUP}}

LDAP_MANAGER_NAME=${LDAP_MANAGER_NAME:-Manager}
LDAP_MANAGER_PASS=${LDAP_MANAGER_PASS:-secret}
LDAP_MANAGER_DOMAIN=${LDAP_MANAGER_DOMAIN:-${LDAP_DOMAIN}}

LDAP_DATABASE=${LDAP_DATABASE:-mdb}

LDAP_BACKUP_DIR=${LDAP_BACKUP_DIR:-${LDAP_CONFIG_DIR}/backup}

# slapd daemon configure
SLAPD_DEBUG_LEVEL=${SLAPD_DEBUG_LEVEL:-0}

SLAPD_LDAP=${SLAPD_LDAP:-yes}
SLAPD_LDAPI=${SLAPD_LDAPI:-yes}
SLAPD_LDAPS=${SLAPD_LDAPS:-no}

# Generate SSL CA Certificate
GENERATE_SELFSIGNED_CACERT=${GENERATE_SELFSIGNED_CACERT:-no}

# Pem filename
CA_PEM_FILE=${CA_PEM_FILE:-ca.pem}
SERVER_PEM_FILE=${SERVER_PEM_FILE:-server.pem}

# HOSTNAME in Certificate
SSL_HOSTNAME=${SSL_HOSTNAME:-${HOSTNAME}}

# NSSDB
NSSDB_PASS=${NSSDB_PASS:-secretpw}
NSSDB_CACERT_NAME=${NSSDB_CACERT_NAME:-CA Certificate}
NSSDB_CERT_NAME=${NSSDB_CERT_NAME:-OpenLDAP Server}
